{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "smithery-installer",
  "version": "0.1.0",
  "identifier": "com.smithery.installer",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Smithery",
        "width": 600,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "theme": "Dark",
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "dmg": {}
    },
    "windows": {
      "wix": {},
      "nsis": {}
    }
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "install-cli",
          "cmd": "cp",
          "args": true
        }
      ]
    }
  }
}
